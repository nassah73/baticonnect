<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.shape.SVGPath?>

<AnchorPane prefHeight="850.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controler.chefController.MaterialsController">

    <stylesheets>
        <URL value="@chef.css" />
    </stylesheets>

    <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="1200.0" styleClass="menu-bar">
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 20;">
            <Label text="Chief Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>

        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 50;">
            <Button text="Home" onAction="#handleDashboardClick" styleClass="nav-button"/>

            <Button text="Responsables" onAction="#handleResponsablesClick" styleClass="nav-button"/>

            <Button text="Projects" onAction="#handleProjectsClick" styleClass="nav-button"/>

            <Button text="Reports" onAction="#handleReportsClick" styleClass="nav-button" />

            <Button text="Materials" disable="true" styleClass="nav-button" />

            <Button text="Client Requests" onAction="#handleClientRequestsClick" styleClass="nav-button" />
        </HBox>
    </HBox>

    <VBox layoutX="20.0" layoutY="80.0" spacing="20" prefWidth="1160">

        <HBox alignment="CENTER_LEFT" spacing="20" VBox.vgrow="NEVER">
            <VBox HBox.hgrow="ALWAYS">
                <Label text="Material Management" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label text="Track and manage construction materials inventory" style="-fx-opacity: 0.7;"/>
            </VBox>
            <Button text="+ Add Material" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 8 15; -fx-font-weight: bold;"/>
        </HBox>

        <TableView fx:id="materialsTable" prefHeight="600" styleClass="card">
            <columns>
                <TableColumn prefWidth="250.0" text="Material">
                    <cellValueFactory><PropertyValueFactory property="materialName" /></cellValueFactory>
                </TableColumn>

                <TableColumn prefWidth="120.0" text="Quantity">
                    <cellValueFactory><PropertyValueFactory property="quantity" /></cellValueFactory>
                </TableColumn>

                <TableColumn prefWidth="180.0" text="Supplier">
                    <cellValueFactory><PropertyValueFactory property="supplier" /></cellValueFactory>
                </TableColumn>

                <TableColumn prefWidth="150.0" text="Last Order">
                    <cellValueFactory><PropertyValueFactory property="lastOrderDate" /></cellValueFactory>
                </TableColumn>

                <TableColumn prefWidth="100.0" text="Status">
                    <cellValueFactory><PropertyValueFactory property="status" /></cellValueFactory>
                </TableColumn>

                <TableColumn prefWidth="150.0" text="Actions">
                </TableColumn>
            </columns>

            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        </TableView>

    </VBox>
</AnchorPane>