<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import java.net.URL?>
<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controler.chefController.ProjectDetailsController">
    <AnchorPane prefHeight="800.0" prefWidth="900.0" style="-fx-background-color: #f8f9fa;">
        <stylesheets>
            <URL value="@chef.css" />
        </stylesheets>

        <VBox spacing="25" style="-fx-padding: 30;" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <HBox alignment="CENTER_LEFT" spacing="20">
                <SVGPath content="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8zM14 2v6h6"
                         style="-fx-fill: #1f2838; -fx-scale-x: 1.5; -fx-scale-y: 1.5;"/>
                <VBox HBox.hgrow="ALWAYS">
                    <Label fx:id="projectNameLabel" text="Project Name Here" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label fx:id="managerLabel" text="Managed by: John Doe" style="-fx-opacity: 0.7;"/>
                    <Label fx:id="projectIdDisplayLabel" text="Project ID: Loading..." style="-fx-font-size: 10px; -fx-opacity: 0.5;"/>
                </VBox>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Edit Info" onAction="#handleEditInfo"
                            style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 8px;"/>
                    <Button text="Delete Project" onAction="#handleDeleteProject"
                            style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 8px;"/>
                </HBox>
            </HBox>

            <HBox spacing="20">
                <VBox styleClass="card" HBox.hgrow="ALWAYS">
                    <Label text="Status  Progress" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <Label text="Current Status:" style="-fx-font-weight: bold; -fx-opacity: 0.8;"/>
                            <Label fx:id="statusTag" text="In Progress" styleClass="tag-inprogress"/>
                        </HBox>

                        <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
                            <HBox alignment="CENTER_LEFT">
                                <Label text="Overall Completion" style="-fx-font-weight: bold; -fx-opacity: 0.8;" HBox.hgrow="ALWAYS"/>
                                <Label fx:id="progressPercentLabel" text="75%" style="-fx-font-weight: bold; -fx-text-fill: #007bff;"/>
                            </HBox>
                            <ProgressBar fx:id="overallProgressBar" progress="0.75" prefHeight="15" prefWidth="1.7976931348623157E308" style="-fx-accent: #007bff;"/>
                        </VBox>
                    </VBox>
                </VBox>

                <VBox styleClass="card" prefWidth="350">
                    <Label text="Budget Overview" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <GridPane hgap="10" vgap="10" style="-fx-padding: 10 0 0 0;">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        </columnConstraints>
                        <Label text="Total Budget:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-opacity: 0.8;"/>
                        <Label fx:id="totalBudgetLabel" text="$2,500,000" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #28a745;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Label text="Spent to Date:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-opacity: 0.8;"/>
                        <Label fx:id="spentToDateLabel" text="$1,600,000" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label text="Remaining:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-opacity: 0.8;"/>
                        <Label fx:id="remainingBudgetLabel" text="$900,000" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: #28a745;"/>
                    </GridPane>
                </VBox>
            </HBox>

            <VBox spacing="15" styleClass="card">
                <Label text="Basic Information" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <GridPane hgap="20" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                    </columnConstraints>

                    <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-opacity: 0.8;"/>
                    <Label fx:id="startDateLabel" text="2024-09-01" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Deadline:" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-opacity: 0.8;"/>
                    <Label fx:id="deadlineLabel" text="2025-05-30" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-opacity: 0.8;"/>
                    <Label fx:id="locationLabel" text="Rabat, Morocco" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Category:" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-opacity: 0.8;"/>
                    <Label fx:id="categoryLabel" text="Commercial" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                </GridPane>
            </VBox>

            <VBox spacing="15" styleClass="card">
                <Label text="Project Activities (Tasks  Reports)" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Label text="Project details view can be extended here to include a list of assigned tasks, reports, and material usage." style="-fx-opacity: 0.7;"/>
            </VBox>

        </VBox>
    </AnchorPane>
</ScrollPane>