<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import java.net.URL?>
<AnchorPane prefHeight="850.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controler.chefController.ProjectsController">
    <stylesheets>
        <URL value="@chef.css" />
    </stylesheets>

    <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="1200.0" styleClass="menu-bar"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 20;">
            <Label text="Chief Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            <Label text="Welcome backØŒ esg" style="-fx-opacity: 0.7;"/>
        </HBox>
        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 50;">
            <Button text="Home" onAction="#handleDashboardClick" styleClass="nav-button"/>
            <Button text="Responsables" onAction="#handleResponsablesClick" styleClass="nav-button"/>
            <Button text="Projects" onAction="#handleProjectsClick" styleClass="nav-button-active" />
            <Button text="Reports" onAction="#handleReportsClick" styleClass="nav-button" />
            <Button text="Materials" onAction="#handleMaterialsClick" styleClass="nav-button" />
            <Button text="Client Requests" onAction="#handleClientRequestsClick" styleClass="nav-button" />
        </HBox>
    </HBox>

    <ScrollPane fitToWidth="true" AnchorPane.topAnchor="60.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                styleClass="dashboard-scroll">
        <VBox spacing="20" style="-fx-padding: 20;">

            <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="All Projects" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <Label text="Monitor progress across all projects" style="-fx-opacity: 0.7;"/>
                </VBox>
                <Button text="+ Add Project" onAction="#handleAddProjectAction"
                        style="-fx-background-color: #fd7e14; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 8 15; -fx-font-weight: bold;"/>
            </HBox>

            <VBox fx:id="projectsListContainer" spacing="15" VBox.vgrow="ALWAYS">

                <VBox styleClass="card-project-details"
                      style="-fx-padding: 15;"
                      userData="OFFICE-RENO-1">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <HBox alignment="CENTER_LEFT" spacing="20">
                        <SVGPath content="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8zM14 2v6h6"
                                 style="-fx-fill: #007bff; -fx-scale-x: 1.5; -fx-scale-y: 1.5;"/>

                        <VBox HBox.hgrow="ALWAYS">
                            <Label text="Office Building Renovation"
                                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                            <Label text="Managed by: John Smith | Category: Commercial" style="-fx-opacity: 0.7;"/>
                            <Label text="Budget: $2,500,000 | Deadline: 2026-06-15" style="-fx-opacity: 0.7;"/>
                        </VBox>

                        <VBox alignment="CENTER_RIGHT" spacing="5">
                            <Label text="In Progress" styleClass="tag-inprogress"/>
                            <Button text="View Details" styleClass="button-view-details-project"
                                    onAction="#handleViewProjectDetails"/>
                        </VBox>
                    </HBox>

                    <VBox style="-fx-padding: 10 0 0 0;" spacing="5">
                        <Label text="Overall Progress" style="-fx-font-weight: bold; -fx-opacity: 0.8;"/>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <ProgressBar progress="0.65" prefHeight="10" HBox.hgrow="ALWAYS"
                                         style="-fx-accent: #007bff;"/>
                            <Label text="65%" style="-fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>
                </VBox>

                <VBox styleClass="card-project-details" style="-fx-padding: 15;" userData="RES-COMPLEX-2">
                    <cursor><Cursor fx:constant="HAND" /></cursor>
                    <HBox alignment="CENTER_LEFT" spacing="20">
                        <SVGPath content="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8zM14 2v6h6" style="-fx-fill: #007bff; -fx-scale-x: 1.5; -fx-scale-y: 1.5;"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label text="Residential Complex" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
                            <Label text="Managed by: Maria Garcia | Category: Multi-Family Residential" style="-fx-opacity: 0.7;"/>
                            <Label text="Budget: $8,000,000 | Deadline: 2027-03-30" style="-fx-opacity: 0.7;"/>
                        </VBox>
                        <VBox alignment="CENTER_RIGHT" spacing="5">
                            <Label text="Planning" styleClass="tag-planning"/>
                            <Button text="View Details" styleClass="button-view-details-project" onAction="#handleViewProjectDetails"/>
                        </VBox>
                    </HBox>
                    <VBox style="-fx-padding: 10 0 0 0;" spacing="5">
                        <Label text="Overall Progress" style="-fx-font-weight: bold; -fx-opacity: 0.8;"/>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <ProgressBar progress="0.25" prefHeight="10" HBox.hgrow="ALWAYS" style="-fx-accent: #007bff;"/>
                            <Label text="25%" style="-fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>
                </VBox>

            </VBox>
        </VBox>
    </ScrollPane>
</AnchorPane>