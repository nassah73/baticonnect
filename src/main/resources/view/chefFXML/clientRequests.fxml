<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.shape.SVGPath?>

<AnchorPane prefHeight="850.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controler.chefController.ClientRequestsController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="1200.0" styleClass="menu-bar">
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 20;">
            <Label text="Chief Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>

        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 50;">
            <Button text="Home" onAction="#handleDashboardClick" styleClass="nav-button"/>

            <Button text="Responsables" onAction="#handleResponsablesClick" styleClass="nav-button"/>

            <Button text="Projects" onAction="#handleProjectsClick" styleClass="nav-button"/>

            <Button text="Reports" onAction="#handleReportsClick" styleClass="nav-button" />

            <Button text="Materials" onAction="#handleMaterialsClick" styleClass="nav-button" />

            <Button text="Client Requests" disable="true" styleClass="nav-button" />
        </HBox>
    </HBox>

    <VBox layoutX="20.0" layoutY="80.0" spacing="20" prefWidth="1160">

        <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
            <VBox HBox.hgrow="ALWAYS">
                <Label text="Client Project Requests" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label text="Review and manage incoming project requests from clients" style="-fx-opacity: 0.7;"/>
            </VBox>
            <Label text="Pending Requests" style="-fx-font-weight: bold;"/>
            <Label text="5" style="-fx-font-size: 24px; -fx-text-fill: #ff9800; -fx-font-weight: bold; -fx-padding: 0 0 0 10;"/>
        </HBox>

        <HBox spacing="20">
            <VBox styleClass="card" prefWidth="275" prefHeight="100" style="-fx-background-color: #e6f0ff; -fx-border-color: #007bff; -fx-border-width: 0 0 3 0;">
                <Label text="Total Requests" style="-fx-font-weight: bold; -fx-text-fill: #007bff;"/>
                <Label text="5" style="-fx-font-size: 30px; -fx-font-weight: bold;"/>
            </VBox>

            <VBox styleClass="card" prefWidth="275" prefHeight="100" style="-fx-background-color: #fffbe6; -fx-border-color: #ffc107; -fx-border-width: 0 0 3 0;">
                <Label text="Pending Review" style="-fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
                <Label text="5" style="-fx-font-size: 30px; -fx-font-weight: bold;"/>
            </VBox>

            <VBox styleClass="card" prefWidth="275" prefHeight="100" style="-fx-background-color: #ffe6e6; -fx-border-color: #dc3545; -fx-border-width: 0 0 3 0;">
                <Label text="High Priority" style="-fx-font-weight: bold; -fx-text-fill: #dc3545;"/>
                <Label text="2" style="-fx-font-size: 30px; -fx-font-weight: bold;"/>
            </VBox>

            <VBox styleClass="card" prefWidth="275" prefHeight="100" style="-fx-background-color: #e6ffe6; -fx-border-color: #28a745; -fx-border-width: 0 0 3 0;">
                <Label text="Avg. Budget" style="-fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                <Label text="4.76M" style="-fx-font-size: 30px; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>

        <VBox spacing="15">
            <Label text="Incoming Project Requests" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>

            <HBox styleClass="card-request" alignment="CENTER_LEFT" spacing="20">
                <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm0-12h-2V7h2v5z" style="-fx-fill: #007bff; -fx-scale-x: 1.5; -fx-scale-y: 1.5;"/>
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Luxury Villa Construction" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Michael Anderson" style="-fx-opacity: 0.8;"/>
                    <HBox spacing="20" style="-fx-opacity: 0.7; -fx-font-size: 12px;">
                        <Label text="Category: Residential Building" />
                        <Label text="Budget: $2,500,000" />
                        <Label text="Location: Beverly Hills, Los Angeles" />
                        <Label text="Deadline: 2026-06-15" />
                    </HBox>
                </VBox>
                <Label text="Medium" styleClass="tag-medium-priority"/>
                <Button text="View Details" styleClass="button-action"/>
            </HBox>

            <HBox styleClass="card-request" alignment="CENTER_LEFT" spacing="20">
                <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm0-12h-2V7h2v5z" style="-fx-fill: #007bff; -fx-scale-x: 1.5; -fx-scale-y: 1.5;"/>
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Tech Office Complex" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Sarah Johnson" style="-fx-opacity: 0.8;"/>
                    <HBox spacing="20" style="-fx-opacity: 0.7; -fx-font-size: 12px;">
                        <Label text="Category: Commercial Building" />
                        <Label text="Budget: $5,000,000" />
                        <Label text="Location: Downtown San Francisco" />
                        <Label text="Deadline: 2026-12-01" />
                    </HBox>
                </VBox>
                <Label text="High" styleClass="tag-high-priority"/>
                <Button text="View Details" styleClass="button-action"/>
            </HBox>

            <HBox styleClass="card-request" alignment="CENTER_LEFT" spacing="20">
                <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm0-12h-2V7h2v5z" style="-fx-fill: #007bff; -fx-scale-x: 1.5; -fx-scale-y: 1.5;"/>
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Residential Apartment Complex" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Robert Martinez" style="-fx-opacity: 0.8;"/>
                    <HBox spacing="20" style="-fx-opacity: 0.7; -fx-font-size: 12px;">
                        <Label text="Category: Multi-Family Residential" />
                        <Label text="Budget: $8,000,000" />
                        <Label text="Location: Miami Beach, Florida" />
                        <Label text="Deadline: 2027-03-30" />
                    </HBox>
                </VBox>
                <Label text="Medium" styleClass="tag-medium-priority"/>
                <Button text="View Details" styleClass="button-action"/>
            </HBox>

        </VBox>
    </VBox>
</AnchorPane>