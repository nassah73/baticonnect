<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.shape.SVGPath?> <?import java.net.URL?>

<AnchorPane prefHeight="550.0" prefWidth="450.0"
            style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controler.chefController.AddResponsableController">
    <stylesheets>
        <URL value="@chef.css" />
    </stylesheets>

    <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5);"
          AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

        <VBox alignment="CENTER_LEFT" spacing="5">
            <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"
                     style="-fx-fill: #fd7e14; -fx-scale-x: 2.0; -fx-scale-y: 2.0; -fx-padding: 0 0 10 0;"/>

            <Label text="Add New Project Responsable" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <Label text="Fill in the details to create a new user account." style="-fx-opacity: 0.7;"/>
        </VBox>

        <VBox prefHeight="1" style="-fx-background-color: #eee;"/>

        <VBox spacing="15">
            <VBox spacing="5">
                <Label text="Full Name" style="-fx-font-weight: bold;"/>
                <TextField fx:id="nameField" promptText="Enter full name" styleClass="text-field-custom"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Email Address" style="-fx-font-weight: bold;"/>
                <TextField fx:id="emailField" promptText="Enter email address" styleClass="text-field-custom"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Password" style="-fx-font-weight: bold;"/>
                <PasswordField fx:id="passwordField" promptText="Set initial password" styleClass="text-field-custom"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Job Title (e.g., Site Supervisor)" style="-fx-font-weight: bold;"/>
                <TextField fx:id="jobTitleField" promptText="Enter job title" styleClass="text-field-custom"/>
            </VBox>
        </VBox>

        <Button text="Create Account" fx:id="createButton" onAction="#handleCreateResponsable"
                style="-fx-background-color: #fd7e14; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 12 25; -fx-font-weight: bold; -fx-font-size: 16px;"/>

    </VBox>
</AnchorPane>